<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:src="@drawable/fanhui" />

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="16dp"
	    android:src="@drawable/iclothsss" />

	<Spinner
	    android:id="@+id/spin_three"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/spin_one"
	    android:layout_below="@+id/spin_two"
	    android:layout_marginTop="22dp"
	    android:layout_toRightOf="@+id/imageView5"
	    android:entries="@array/classifytops"
	    android:prompt="@string/spinner_tops"
	    android:spinnerMode="dropdown" />

	<ImageView
	    android:id="@+id/imageView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/spin_one"
	    android:layout_alignRight="@+id/imageView5"
	    android:layout_marginBottom="17dp"
	    android:src="@drawable/jijiespinner" />

	<ImageView
	    android:id="@+id/imageView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/spin_two"
	    android:layout_marginTop="14dp"
	    android:layout_toLeftOf="@+id/spin_two"
	    android:src="@drawable/yansespinner" />

	<ImageView
	    android:id="@+id/imageView5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imageView4"
	    android:layout_alignTop="@+id/spin_three"
	    android:layout_marginTop="14dp"
	    android:src="@drawable/shangxiazhuangspinner" />

	<Spinner
	    android:id="@+id/spin_two"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/spin_one"
	    android:layout_alignRight="@+id/spin_one"
	    android:layout_below="@+id/spin_one"
	    android:layout_marginTop="21dp"
	    android:entries="@array/classifycolor"
	    android:prompt="@string/spinner_color"
	    android:spinnerMode="dropdown" />

	<Spinner
	    android:id="@+id/spin_one"
	    android:layout_width="100dp"
	    android:layout_height="64dp"
	    android:layout_alignLeft="@+id/imageView2"
	    android:layout_below="@+id/imageView1"
	    android:layout_marginTop="110dp"
	    android:entries="@array/classifyseason"
	    android:prompt="@string/spinner_season"
	    android:spinnerMode="dropdown" />

	<ImageButton
	    android:id="@+id/imageButton2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/spin_three"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="34dp"
	    android:background="#00000000"
	    android:src="@drawable/baocun" />

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/fenleisheding" />

</RelativeLayout>



